<% include partials/header %>
<% include partials/navbar %>

<div class="container">
  <h1 class="text-center">Contact Me</h1>
  <hr>
  <div class="col-md-6 col-md-offset-3">
    <div class="well">
      <p>If you'd like to get in contact with me, 
        I can be reached via this handy dandy contact
        form. <em>Business inquiries only.</em>
      </p>
      <form action="/contact" method="POST" id="contact">
        <div class="form-group">
          <input type="text" class="form-control" 
          name="name" placeholder="Name" required>
        </div>
        <div class="form-group">
          <input type="email" class="form-control" 
          name="email" placeholder="Email" required>
        </div>
        <div class="form-group">
          <input type="text" class="form-control"
          name="subject" placeholder="Subject" required>
        </div>
        <div class="form-group">
          <input type="text" class="form-control"
          name="message" placeholder="Message" required>
        </div>
        <button class="btn btn-default btn-lg btn-block">Submit</button>
      </div>
    </div>
  </div>
</div>

<% include partials/footer %>